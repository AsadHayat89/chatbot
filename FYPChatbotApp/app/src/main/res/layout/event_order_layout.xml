<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_order_name"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical|start"
                android:textStyle="bold"
                android:text="Abeera"
                android:textColor="@color/grey"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_order_phone"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginBottom="2dp"
                android:text="758972895"
                android:textColor="@color/grey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_order_date"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginBottom="2dp"
                android:textColor="@color/grey"
                android:text="09-09-2022"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_order_time"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginBottom="2dp"
                android:textColor="@color/grey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_order_people"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginBottom="2dp"
                android:textColor="@color/grey"
                android:text="4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_order_type"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginBottom="2dp"
                android:textColor="@color/grey"
                android:text="birthday"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_order_cake_type"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginBottom="2dp"
                android:textColor="@color/grey"
                android:text="chocolate"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_order_cake_writing"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginBottom="2dp"
                android:textColor="@color/grey"
                android:text="happy birthday"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_balloons_decor"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginBottom="2dp"
                android:textColor="@color/grey"
                android:text="birthday"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_stage_decor"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginBottom="2dp"
                android:textColor="@color/grey"
                android:text="birthday"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_stage_writing"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginBottom="2dp"
                android:textColor="@color/grey"
                android:text="birthday"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_hours"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginBottom="2dp"
                android:textColor="@color/grey"
                android:text="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_songs"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginBottom="2dp"
                android:textColor="@color/grey"
                android:text="abc"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryDark"
        android:layout_gravity="bottom"/>

</androidx.cardview.widget.CardView>